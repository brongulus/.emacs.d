    fn add_two_and_two() {
        let result = add_two(2);
        assert_eq!(result, 4);
    }

    fn add_three_and_two() {
        let result = add_two(3);
        assert_eq!(result, 5);
    }

    fn one_hundred() {
        let result = add_two(100);
        assert_eq!(result, 102);
